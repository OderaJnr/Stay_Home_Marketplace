<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/whiteCardColor"
    android:layout_margin="1dp"
    android:gravity="center"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/mpesalayout"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Choose A Payment Method"
            android:textColor="#000"
            android:textSize="20sp"
            ></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:src="@drawable/equitel_logo"></ImageView>

            <ImageView
                android:layout_width="130dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/colorPrimary"

                app:srcCompat="@drawable/ic_mpesa_logo_withtext"></ImageView>

            <ImageView
                android:id="@+id/visalogo"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:src="@drawable/visa_____"></ImageView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Payment Details"
                android:textColor="#000"
                android:textSize="20sp"
                ></TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:hint="Choose Account number"
                android:textColor="#000"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/thin_color_primary_backround"
                ></EditText>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/thin_color_primary_backround"
                android:gravity="center"
                android:hint="Your Mpesa phone number"
                android:textColor="#000"
                android:textSize="20sp"

                ></EditText>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="35dp"
                android:background="@color/colorPrimary" />





            <TextView
                android:id="@+id/backbutton"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/thin_black_outline"
                android:text="Kindly note that all profit made through app will be channelled to fight COVID-19 amongst the vulnerable groups ,so you can join the movement by making an extra donation to the group .Thank you"
                android:textColor="#000"
                android:textSize="17dp"
                android:padding="20dp"
                android:textAllCaps="false"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"/>






            <Button
                android:id="@+id/buyunitsmpesa"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:text="Pay For Your Order Only"
                android:textColor="#fff"
                android:textSize="17dp"
                android:backgroundTint="@color/colorPrimary"
                android:textAllCaps="false"
                android:background="@drawable/almostoval_backroud"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                />

            <Button
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:text="Donate Extra Amount"
                android:textColor="@color/colorPrimary"
                android:textSize="17dp"
                android:textAllCaps="false"
                android:background="@drawable/almostoval_buttons_thin_line"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"

                />





        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/Visalayout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Choose A Payment Method"
            android:textColor="#000"
            android:textSize="20sp"
            ></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:src="@drawable/equitel_logo"></ImageView>

            <ImageView
                android:layout_width="130dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="@drawable/thin_color_primary_backround"

                android:src="@drawable/visa_____"></ImageView>

            <ImageView
                android:id="@+id/mpesalogo"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:padding="5dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/colorPrimary"

                app:srcCompat="@drawable/ic_mpesa_logo_withtext"
                ></ImageView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Payment Details"
                android:textColor="#000"
                android:textSize="20sp"
                ></TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:hint="Choose Account number"
                android:textColor="#000"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/thin_color_primary_backround"
                ></EditText>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/thin_color_primary_backround"
                android:gravity="center"
                android:hint="Full Name"
                android:textColor="#000"
                android:textSize="20sp"

                ></EditText>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/thin_color_primary_backround"
                android:gravity="center"
                android:hint="Card number"
                android:textColor="#000"
                android:textSize="20sp"

                ></EditText>


            <LinearLayout
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="127dp"
                    android:layout_height="43dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/thin_color_primary_backround"
                    android:gravity="center"
                    android:hint="MM"
                    android:textColor="#000"
                    android:textSize="20sp"

                    ></EditText>


                <EditText
                    android:layout_width="100dp"
                    android:layout_height="43dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/thin_color_primary_backround"
                    android:gravity="center"
                    android:hint="YYYY"
                    android:textColor="#000"
                    android:textSize="20sp"


                    ></EditText>


                <EditText
                    android:layout_width="78dp"
                    android:layout_height="43dp"
                    android:background="@drawable/thin_color_primary_backround"
                    android:gravity="center"
                    android:hint="CVV"
                    android:textColor="#000"
                    android:textSize="20sp"

                    ></EditText>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="35dp"
                android:background="@color/colorPrimary" />
            <Button
                android:id="@+id/buyunitsvisa"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:text="Buy units"
                android:textColor="#fff"
                android:textSize="17dp"
                android:backgroundTint="@color/colorPrimary"
                android:textAllCaps="false"
                android:background="@drawable/almostoval_backroud"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"/>


            <Button
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:text="Back"
                android:textColor="@color/colorPrimary"
                android:textSize="17dp"
                android:textAllCaps="false"
                android:background="@drawable/almostoval_buttons_thin_line"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>






    </LinearLayout>




</LinearLayout>